<link rel="stylesheet" href="./public/css/signup.css" />

<div style="margin-top: 60px;">
  <div>
    <h3 style="color: #989898;">
      <i class="fa-solid fa-comment"></i>
      Editar publicación
    </h3>
  </div>
  <br />
  <div>
    <form action="/notes/delete/{{publication._id}}" method="post" id="formDeletePub" data-sett="{{publication._id}}"
      style="display: flex; justify-content: space-between; align-items: center;">
      <div style="margin-bottom: 5px;">
        <a style=" border-radius: 8px; border: none; width: 100%;font-size: 18px; background: #fff;  padding: 11px;  text-decoration: none; cursor: pointer; margin-top: 20px; color: #000;"
          href="/notes">
          <i class="fa-solid fa-angle-left"></i>
          Regresar
        </a>
      </div>
      <div style="margin-bottom: 5px;">

        <button
          style=" border-radius: 8px; border: none; width: 100%;font-size: 18px; background: #fff; color: #000; padding: 4px;  height: 44px; cursor: pointer;"
          id="deletePub" type="submit">
          <i class="fa-solid fa-trash"></i>
          Eliminar
        </button>
      </div>
    </form>
    <form action="/notes/edit-note/{{publication._id}}" method="post">
      <div class="form-group p-2">
        <input type="text" id="title" name="title" minlength="10" maxlength="500" style="height: 38px; border-radius: 8px; width: 100%; outline: none;"
          placeholder="Título" value="{{publication.title}}" required />
      </div>
      <div style="margin-top: 20px;">
        <textarea type="text" name="description" id="description" minlength="10" maxlength="2500"
          style="border-radius: 8px; width: 100%; outline: none; resize: none; field-sizing: content; height: auto; padding: 10px;"
          placeholder="Descripción" required>{{publication.description}}</textarea>
      </div>
      <br>
      <button
        style=" border-radius: 8px; border: none; width: 100%;font-size: 18px; background: #c0392b; color: #fff; padding: 4px;  height: 48px; cursor: pointer;"
        type="submit">
        <i class="fa fa-upload"></i>
        Enviar
      </button>

      <div class="form-group p-2">
      </div>

    </form>
  </div>
</div>
<script type="" src="./public/js/sweetalert.js"></script>
<script type="" src="./public/js/editpublication.js"></script>


{{#if error_msg}}
<script>
  Swal.fire({ icon: "error", title: "Oops...", text: `{{error_msg}}` });
</script>
{{/if}}
{{#if errors}}
<script>
  Swal.fire({
    icon: "error", title: "Oops...", text: `
    {{#each errors}}
      {{text}}
    {{/each}}

    `});
</script>
{{/if}}