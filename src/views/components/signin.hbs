<link href="/public/css/theme.css" rel="stylesheet" type="text/html" />

<div style="display: grid; place-items: center; height: 60vh;">
<br>
<br>
<br>
<br>
<br>
    <form action="/users/signin" method="post" class="form" style="width: 300px; display: grid; justify-content: space-between; height: 300px;">
<h2 style="color: aliceblue;">Inicio de sesión</h2>
    <div style="gap: 20px; margin-top: 15px;">

      <label for="" style="color: aliceblue;">Dirección de correo electrónico</label>
          <input
            type="email"
            name="email"
            style="height: 38px; border-radius: 8px; width: 100%; outline: none;"
            value=""
            placeholder="email"
            autofocus
          />
    </div>


    <div style="gap: 20px; margin-top: 15px;">

      <label for="" style="color: aliceblue;">Contraseña</label>
          <input
            type="password"
            name="password"
            style="height: 38px; border-radius: 8px; width: 100%; outline: none;"
            value=""
            placeholder="password"
            
          />
    </div>
    <div style=" gap: 20px; margin-top: 15px;">

        <button
          type="submit"
          name="button"
          class=""
          style=" border-radius: 8px; border: none; width: 100%;font-size: 18px; background: #c0392b; color: #fff; padding: 4px;  height: 48px; cursor: pointer;"
        >Ingresar</button>
    </div>
</form>

  <div style="color: azure;">
    <div >
      Aún no tienes cuenta?
      <a href="/users/signup" style="text-decoration: none; margin-left: 2px; color: inherit;">Crear cuenta</a>
    </div>
  </div>



</div>
<script src="/public/js/sweetalert.js"></script>
</script>
{{#if message}}
  <script>
    Swal.fire({ icon: "error", title: "Oops...", text: `{{message}}`});
  </script>
{{/if}}
{{#if success_msg}}
  <script>
    Swal.fire({ title: "Bien hecho!", text: `{{success_msg}}`, icon: "success"
    });
  </script>
{{/if}}